extends layout

block styles
    link(rel='stylesheet', href='/stylesheets/login.css')

block scripts
    script(src="/javascripts/login.js")

block content
    div.container
        form.login
            h2 Login
            //- label(class="sr-only", for="usernameInput") Username
            input.form-control(type="text", id="usernameInput", placeholder="Username")
            //- label(class="sr-only", for="passwordInput") Password
            input.form-control(type="password", id="passwordInput", placeholder="Password")
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign In